@model CustomerModel

<div class="profile-body">
    <div class="profile-card" style="margin-top: 70px">
        <div class="profile-card-image" style="background-image: url('@Model.Hotel.Image');">
        </div>
        <div class="profile-card-text">
            <h2 class="mt-2">@Model.Hotel.HotelName</h2>
            <p>@Model.Hotel.Address</p>
            <p>Rooms: @Model.Rooms</p>
            <span class="days">Price : $@((Model.CheckOut - Model.CheckIn).TotalDays * Model.Hotel.Price * Model.Rooms)</span>
        </div>
        <div class="profile-card-stats">
            <div class="stat">
                <div class="value">@Model.CheckIn.ToShortDateString()</div>
                <div class="type">Check In</div>
            </div>
            <div class="stat">
                <div class="value">@Model.CheckOut.ToShortDateString()</div>
                <div class="type">Check Out</div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center" style="margin-top: 50px">
    <a class="btn btn-danger" onclick="confirmCancel(@Model.CustomerId)">Cancel</a>
</div>
<div class="d-flex justify-content-center" style="margin-top: 50px">
    <a class="btn btn-warning" asp-action="addReview" asp-route-id="@Model.CustomerId">Review</a>
</div>

<script>
    function confirmCancel(customerId) {
        if (confirm("Are you sure ! You want to cancel your Booking ?")) {
            window.location.href = "/CustomerModels/Cancel/" + customerId;
        }
    }
</script>