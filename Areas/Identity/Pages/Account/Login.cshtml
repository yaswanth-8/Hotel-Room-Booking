@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
=

<section class="title-template">
    <h1 class="title">Log In</h1>
    <form class="contact-form row" id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-field col-lg-6">
            <label asp-for="Input.Email" class="control-label">Email address</label>

            <input asp-for="Input.Email" class="form-control" auto-complete="off" aria-required="true" value="" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-field col-lg-6">
            <label asp-for="Input.Password" class="control-label">Password</label>

            <input asp-for="Input.Password" class="form-control" auto-complete="off" aria-required="true" value="" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center">
        <button id="login-submit" type="submit" class="submit-btn">Log in</button>
        </div>
    </form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
